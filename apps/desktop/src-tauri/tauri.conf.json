{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "witch",
	"version": "1.0.4",
	"identifier": "com.jui.witch",
	"build": {
		"beforeDevCommand": "bun run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "bun run build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"label": "main",
				"title": "Witch",
				"width": 840,
				"height": 700,
				"decorations": false,
				"resizable": false,
				"visible": false,
				"skipTaskbar": true,
				"alwaysOnTop": true,
				"transparent": true
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": ["deb"],
		"icon": [
			"icons/icon.png",
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"externalBin": ["binaries/witch-server"]
	}
}
